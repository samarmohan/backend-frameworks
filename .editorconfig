root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = tab

[*.py]
tab_width = 4
indent_size = 4
max_line_length = 79

[{*.ts, *.js}]
tab_width = 2

[*.rb]
max_line_length = 80
tab_width = 2

[{*.cs, *.java}]
tab_width = 4

[{*.ex, *.exs}]
tab_width = 2
indent_size = 2
